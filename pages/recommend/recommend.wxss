/* pages/recommend/recommend.wxss */
.recommendpage {
    width: 100%;
    height: 100%;
    background-image: linear-gradient(to bottom right, #ffffff, #f9f9f9);
}
.recommendpage .search{
    width: 100%;
    height: 120rpx;
    margin: 0 auto;
    position: relative;
    overflow: hidden;
}
.recommendpage .search input {
    display: block;
    width: 80%;
    height: 80rpx;
    margin: 0 auto;
    margin-top: 26rpx;
    line-height: 80rpx;
    border-radius: 12rpx;
    padding-left: 80rpx;
    background-color: #F5F7FA;
}
.recommendpage .search image{
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    left: 60rpx;
    top: 46rpx;
}
.recommendpage .recommendList{
    width: 90%;
    margin: 0 auto;
}
.recommendpage .recommendList .item{
    width: 100%;
    margin-top: 40rpx;
    background-color: #FFFFFF;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0 3px 5px #dadada;
}
.recommendpage .recommendList .item .top{
    width: 100%;
    height: 240rpx;
    margin-top: 80rpx;
}
.recommendpage .recommendList .item .top .left{
    float: left;
    margin-left: 60rpx;
}
.recommendpage .recommendList .item .top image{
    display: inline-block;
    width: 154rpx;
    height: 198rpx;
}
.recommendpage .recommendList .item .top .right{
    float: left;
    margin-left: 30rpx;
}
.recommendpage .recommendList .item .top .right .dot{
    margin-left: 4rpx;
    margin-right: 4rpx;
}
.recommendpage .recommendList .item .top .right .bName{
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    margin-top: 16rpx;
}
.recommendpage .recommendList .item .top .right .bAuth{
    font-size: 26rpx;
    color: #999;
    margin-top: 30rpx;
}
.recommendpage .recommendList .item .top .right .status{
    font-size: 26rpx;
    color: #999;
    margin-top: 30rpx;
}
.recommendpage .recommendList .item .desc{
    display: block;
    width: 90%;
    margin-left: 64rpx;
    font-size: 30rpx;
    height: 80rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    overflow:hidden;
    -webkit-box-orient: vertical;
    color: #333;
}
.recommendpage .recommendList .item .center{
    display: block;
    width: 90%;
    margin: 40rpx auto;
    text-align: center;
    color: #CFBB9B;
    font-size: 30rpx;
}
.recommendpage .recommendList .item .center text{
    margin-left: 18rpx;
    margin-right: 18rpx;
}
.recommendpage .recommendList .item .footer{
    width: 90%;
    height: 100rpx;
    margin: 0 auto;
    margin-top: 60rpx;
    padding-bottom: 40rpx;
    position: relative;
}
.recommendpage .recommendList .item .footer .left{
    width: 50%;
    float: left;
}
.recommendpage .recommendList .item .footer .left image{
    display: inline-block;
    width: 38rpx;
    height: 38rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
    margin-top: 16rpx;
}
.recommendpage .recommendList .item .footer .left button{
    background-color: transparent;
    width: 40rpx;
    height: 40rpx;
    border: 0;
    outline: none;
    position: absolute;
    left: 28rpx;
    top: 22rpx;
}
.recommendpage .recommendList .item .footer .left image:nth-child(2){
    width: 48rpx;
    height: 48rpx;
}
.recommendpage .recommendList .item .footer .right{
    width: 50%;
    float: right;
}
.recommendpage .recommendList .item .footer .right button{
    width: 100%;
    margin-top: 12rpx;
    background-color: #FA675E;
    color: #fff;
    border-radius: 40rpx;
    font-size: 30rpx;
}
.recommendpage .updated {
    display: block;
    width: 90%;
    margin: 0 auto;
    font-size: 24rpx;
    margin-top: 60rpx;
    margin-bottom: 20rpx;
    text-align: center;
    color: #666;
}

