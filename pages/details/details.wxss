/* pages/details/details.wxss */
.detailspage{
    width: 100%;
    position: relative;
    overflow: hidden;
}
.detailspage .bgImg{
    width: 100%;
    height: 854rpx;
    background-size:cover;
    filter: blur(8rpx);
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
}

.detailspage .header{
    width: 100%;
    height: 600rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
    text-align: center;
}
.detailspage .header image{
    display: inline-block;
    width: 198rpx;
    height: 254rpx;
    margin-top: 60rpx;
}
.detailspage .header .bookName{
    display: block;
    font-size: 40rpx;
    color: #333;
    font-weight: bold;
    margin-top: 20rpx;
}
.detailspage .header .info{
    display: block;
    font-size: 28rpx;
    color: #333;
    margin-top: 10rpx;
}
.detailspage .header .info .dot{
    margin-left: 10rpx;
    margin-right: 10rpx;
}
.detailspage .bgbox{
    width: 100%;
    height: 120rpx;
    background-color: rgba(255, 255, 255, 0.3);
    margin-top: 460rpx;
}
.detailspage .bgbox .left{
    float: left;
    width: 50%;
    text-align: center;
    font-size: 24rpx;
    color: #333;
}
.detailspage .bgbox .left .wordsCnt{
    display: inline-block;
    width: 100%;
    height: 50%;
    margin-top: 12rpx;
}
.detailspage .bgbox .left .wordsCnt text{
    font-size: 32rpx;
    font-weight: bold;
    margin-right: 4rpx;
}
.detailspage .bgbox .left .bookStatus{
    display: inline-block;
    width: 100%;
    height: 50%;
    margin-top: 16rpx;
}
.detailspage .bgbox .right{
    float: left;
    width: 50%;
    text-align: center;
    font-size: 24rpx;
    color: #333;
}
.detailspage .bgbox .right .monthTicket{
    display: inline-block;
    width: 100%;
    height: 50%;
    margin-top: 12rpx;
}
.detailspage .bgbox .right .monthTicket .ticket{
    font-size: 32rpx;
    font-weight: bold;
    margin-left: 4rpx;
}
.detailspage .bgbox .right .recomAll{
    display: inline-block;
    width: 100%;
    height: 50%;
    margin-top: 10rpx;
}
.detailspage .bgbox .right .recomAll .recom{
    margin-right: 4rpx;
}
.detailspage .olddesc{
    overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    background-color: #fff;
    padding: 8rpx 20rpx;
    color: #666;
    border-top: 2rpx solid #ccc;
    line-height: 48rpx;
    font-size: 28rpx;
}
.detailspage .newdesc{
    background-color: #fff;
    padding: 8rpx 20rpx;
    color: #666;
    border-top: 2rpx solid #ccc;
    line-height: 48rpx;
    font-size: 28rpx;
    overflow: hidden;
}
.detailspage .directory{
    padding: 30rpx 20rpx;
    background-color: #fff;
    border-top: 2rpx solid #ccc;
    border-bottom: 2rpx solid #ccc;
    overflow: hidden;
}
.detailspage .directory .left{
    width: 48rpx;
    height: 48rpx;
    float: left;
    margin-top: -4rpx;
    color: #333;
}
.detailspage .directory .title{
    float: left;
    font-weight: bold;
    color: #333;
    margin-top: -4rpx;
}
.detailspage .directory .updTime{
    float: right;
    color: #999;
    margin-right: 4rpx;
    font-size: 28rpx;
}
.detailspage .directory .updChapterName{
    float: right;
    width: 200rpx;
    color: #999;
    margin-left: 4rpx;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow:ellipsis;    
    white-space: nowrap;
}
.detailspage .directory .right{
    width: 40rpx;
    height: 40rpx;
    float: right;
    color: #999;
}
.content{
    width: 90%;
    position: relative;
    padding: 0 40rpx;
    padding-top: 80rpx;
    padding-bottom: 180rpx;
}
.content .tryRead{
    width: 160rpx;
    height: 60rpx;
    background-color: #333;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    line-height: 60rpx;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
    position: absolute;
    left: 40rpx;
    top: 0;
}
.content .chapter{
    margin-top: 20rpx;
    width: 100%;
    margin: 0 auto;
}
.content .chapter .chapterName{
    display: block;
    font-size: 36rpx;
    color: #333;
    font-weight: bold;
}
.content .chapter .chapterContent{
    display: inline-block;
    height: 400rpx;
    overflow: hidden;
    text-indent: 64rpx;
    font-size: 32rpx;
    margin-top: 20rpx;
}
.content .chapter .chapterContent.active{
    overflow: visible;
    height: 100%;
}
.content .loadmore{
    width: 100%;
    height: 60rpx;
    position: relative;
    display: block;
    box-shadow: 0px -40rpx 160rpx 100rpx  #fff;
    background-color: rgba(255,255,255,0.5);
}
.content .loadmore.active{
    display: none;
}
.content .loadmore image{
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    left: 50%;
    margin-left: -30rpx;
    top: 50%;
    margin-top: -30rpx;
}

.footer{
    width: 100%;
    height: 160rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    background-color: #fff;
    z-index: 999;
    box-shadow: 0 -4rpx 6rpx -2rpx #ccc;
}
.footer .share{
    width: 25%;
    height: 100%;
    text-align: center;
    float: left;
    position: relative;
}
.footer .share image{
    width: 60rpx;
    height: 60rpx;
    margin-top: 30rpx;
}
.footer .share text{
    display: block;
    font-size: 24rpx;
    color: #333;
}
.footer .share button{
    position: absolute;
    width: 50px;
    height: 50px;
    background-color: transparent;
    border: none;
    outline: none;
    top: 8px;
    left: 15px;
}
.footer .poster{
    width: 25%;
    height: 100%;
    text-align: center;
    float: left;
}
.footer .poster image{
    width: 50rpx;
    height: 50rpx;
    margin-top: 30rpx;
}
.footer .poster text{
    display: block;
    font-size: 24rpx;
    color: #333;
    margin-top: 10rpx;
}
.footer .btn{
    width: 50%;
    height: 100%;
    text-align: center;
    float: left;
}
.footer .btn button{
    width: 46%;
    height: 80rpx;
    font-size: 28rpx;
    text-align: center;
    line-height: 80rpx;
    border: 0;
    border-radius: 40rpx;
    margin-top: 30rpx;
}
.footer .btn button:first-child{
    background-color: #ffcbce;
    color: #ef474c;
    float: left;
}
.footer .btn button:last-child{
    background-color: #ef474c;
    color: #fff;
    float: right;
    margin-left: 4%;
    margin-right: 4%;
}

.shareContent{
    width: 100%;
    height: 100%;
    background-color: #F3F3F3;
    overflow: hidden;
}
.shareContent .content{
    width: 80%;
    height: 60%;
    margin: 0 auto;
    margin-top: 80rpx;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    background-color: #fff;
    text-align: center;
    overflow: hidden;
    border-radius: 40rpx;
    box-shadow: #ccc 0rpx 0rpx 20rpx;
    position: relative;
}
.shareContent .content .titleStart{
    display: block;
    width: 100%;
    font-size: 28rpx;
}
.shareContent .content .titleStart .stronge{
    font-weight: bold;
}
.shareContent .content .titleEnd{
    width: 100%;
    display: block;
    font-size: 28rpx;
    text-align: center;
    margin-top: 10rpx;
}
.shareContent .content image{
    position: absolute;
    /* width: 198rpx;
    height: 254rpx; */
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    /* margin-top: 40rpx; */
}
.shareContent .content .bookName{
    display: block;
    font-size: 40rpx;
    color: #333;
    font-weight: bold;
    margin-top: 40rpx;
}
.shareContent .content .info{
    display: block;
    font-size: 26rpx;
    color: #333;
    margin-top: 10rpx;
}
.shareContent .content .info .dot{
    margin-left: 10rpx;
    margin-right: 10rpx;
}
.shareContent button{
    display: block;
    width: 50%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    background-color: #F0484D;
    box-shadow: 0rpx 20rpx 60rpx #F0484D;
    margin-top: 40rpx;
    border-radius: 80rpx;
}

