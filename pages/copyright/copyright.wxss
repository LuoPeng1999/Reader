/* pages/copyright/copyright.wxss */
.copyrightpage {
    width: 100%;
    height: 100%;
    background-color: #fff;
    text-align: center;
    position: relative;
}
.copyrightpage image{
    width: 110px;
    height: 144px;
    display: inline-block;
    margin-top: 50px;
    box-shadow: 0 5px 10px #ccc;
}
.copyrightpage .bookName{
    font-size: 18px;
    margin-top: 20px;
    color: #333;
    font-weight: bold;
}
.copyrightpage .info{
    font-size: 16px;
    color: #333;
    margin-top: 20px;
    display: inline-block;
}
.copyrightpage .info view{
    margin-right: 30px;
}
.copyrightpage .info view:last-child{
    margin-right: 0px;
}
.copyrightpage .info .booktype{
    float: left;
}
.copyrightpage .info .booktype .chanName{
    display: block;
}
.copyrightpage .info .booktype .type{
    display: block;
    font-size: 12px;
    color: #999;
    margin-top: 5px;
}
.copyrightpage .info .booktime{
    float: left;
}
.copyrightpage .info .booktime .jointime{
    display: block;
}
.copyrightpage .info .booktime .time{
    display: block;
    font-size: 12px;
    color: #999;
    margin-top: 5px;
}
.copyrightpage .info .bookcnt{
    float: left;
}
.copyrightpage .info .bookcnt .showWordsCnt{
    display: block;
}
.copyrightpage .info .bookcnt .cnt{
    display: block;
    font-size: 12px;
    color: #999;
    margin-top: 5px;
}
.copyrightpage .hr{
    display: block;
    margin-top: 30px;
    overflow: hidden;
    white-space: nowrap;
}
.copyrightpage .ad{
    display: block;
    font-size: 12px;
    color: #999;
    position: absolute;
    bottom: -90px;
    left: 34px;
}